<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.UrlInfoBox" BindingContext="{Binding Element, Mode=OneWay}">
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="3*" />
    </Grid.RowDefinitions>
    <Label Grid.Row="0" Text="{Binding Protocol, Mode=OneWay}"/>
    <Label Grid.Row="1" Text="{Binding Address, Mode=OneWay}" />
    <ListView Grid.Row="2" ItemsSource="{Binding Arguments, Mode=OneWay}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Label Margin="5" Text="{Binding Key, Mode=OneWay}"/>
                        <Label Margin="5" Text="{Binding Value, Mode=OneWay}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Grid>